<script>
  function copyCode() {
    const code = "SAVEMAX";
    navigator.clipboard.writeText(code);
    const btns = document.querySelectorAll('.copy-btn');
    btns.forEach(btn => {
      btn.textContent = "Code Copied!";
      btn.classList.add('bounce');
      setTimeout(() => {
        btn.textContent = "Copy SAVEMAX Promo Code";
        btn.classList.remove('bounce');
      }, 1500);
    });
  }
